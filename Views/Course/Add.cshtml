@model Course
<div class="container mt-4">
    <h2>إضافة دورة جديدة</h2>
    @if (ViewBag.Errors != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
    <form asp-action="Add" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">عنوان الدورة</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">الوصف</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label">السعر (جنيه)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">صورة الدورة</label>
            <input type="file" name="thumbnail" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">إضافة الدورة</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}