@model List<Course>
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>الدورات - منصة عمر</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;700&display=swap" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Courses Section -->
    <div class="courses-section">
        <div class="container">
            <h2 class="text-center mb-4">الدورات المتاحة</h2>
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var course in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="course-card">
                                <img src="@(course.ThumbnailUrl ?? "/images/default-thumbnail.jpg")" class="card-img-top" alt="@(course.Title ?? "بدون عنوان")">
                                <h5>@(course.Title ?? "بدون عنوان")</h5>
                                <p>@(course.Description?.Length > 100 ? (course.Description.Substring(0, 100) + "...") : (course.Description ?? "بدون وصف"))</p>
                                <p><strong>السعر:</strong> @course.Price ريال</p>
                                <p><strong>المدرس:</strong> @(course.Teacher?.FullName ?? "بدون مدرس")</p>
                                <a asp-action="Details" asp-route-id="@course.CourseId" class="btn">التفاصيل</a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">لا توجد دورات متاحة حاليًا.</div>
            }
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>© 2025 منصة عمر. جميع الحقوق محفوظة. <a href="/Privacy">سياسة الخصوصية</a></p>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>