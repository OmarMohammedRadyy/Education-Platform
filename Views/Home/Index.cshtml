@model List<EducationPlatformN.Models.Course>

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>منصة عمر</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <!-- Slider Section (Moved to Top) -->
    <div class="hero-section" data-aos="zoom-in">
        <div class="container">
            <div class="hero-content">
                <h1>مرحبًا بك في منصة عمر!</h1>
                <p>تعليم مبتكر يأخذك إلى آفاق جديدة</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/Account/Register" class="btn btn-primary">انطلق الآن <i class="fas fa-rocket"></i></a>
                    <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#introVideoModal">اكتشف المزيد <i class="fas fa-play"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Hero Section (Minimized) -->
    
    <div class="slider-section" data-aos="fade-up">
        <div class="container-fluid">
            <h2>استعرض دوراتنا</h2>
            <div id="courseSlider" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var course in Model.Take(3))
                        {
                            <div class="carousel-item @(course == Model.First() ? "active" : "")">
                                <img src="@(course.ThumbnailUrl ?? "/images/default-course.jpg")" class="d-block w-100" alt="@course.Title">
                                <div class="carousel-caption">
                                    <h5>@(course.Title ?? "بدون عنوان")</h5>
                                    <p>@(course.Description?.Length > 100 ? (course.Description.Substring(0, 100) + "...") : (course.Description ?? "بدون وصف"))</p>
                                    <a href="/Account/Register/" class="btn">اكتشف الآن</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="/images/no-courses.jpg" class="d-block w-100" alt="لا توجد دورات">
                            <div class="carousel-caption">
                                <h5>لا توجد دورات حاليًا</h5>
                                <p>تابعنا للحصول على التحديثات!</p>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#courseSlider" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">السابق</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#courseSlider" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">التالي</span>
                </button>
            </div>
        </div>
    </div>
    <!-- Intro Video Modal -->
    <div class="modal fade" id="introVideoModal" tabindex="-1" aria-labelledby="introVideoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content" style="background: rgba(31, 42, 68, 0.9); border: 1px solid #6AA8F7;">
                <div class="modal-header">
                    <h5 class="modal-title" id="introVideoModalLabel" style="color: #4A90E2;">فيديو تعريفي</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <iframe src="https://www.youtube.com/embed/dQw4w9WgXcQ" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="features-section" data-aos="fade-up">
        <div class="container">
            <h2>لماذا منصة عمر؟</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-laptop-code"></i>
                        <h5>تكنولوجيا متقدمة</h5>
                        <p>أدوات تعليمية تعتمد على أحدث التقنيات.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-brain"></i>
                        <h5>تعلم ذكي</h5>
                        <p>محتوى يتكيف مع احتياجاتك الشخصية.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <i class="fas fa-globe"></i>
                        <h5>مرونة كاملة</h5>
                        <p>تعلم أينما كنت ووقتما تشاء.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        // التحقق من تحميل المكتبات
        window.addEventListener('load', function () {
            if (typeof bootstrap === 'undefined') {
                console.error('فشل تحميل Bootstrap JavaScript');
            }
            if (typeof AOS === 'undefined') {
                console.error('فشل تحميل AOS');
            } else {
                AOS.init({
                    duration: 1200,
                    once: true
                });
            }
        });
    </script>
</body>
</html>