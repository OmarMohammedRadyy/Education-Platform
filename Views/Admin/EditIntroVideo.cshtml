@model Course
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>تعديل الفيديو التعريفي للدورة - @Model.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">منصة عمر</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link" href="/"><i class="fas fa-home"></i> الرئيسية</a></li>
                <li class="nav-item"><a class="nav-link" href="/Course"><i class="fas fa-book"></i> الدورات</a></li>
                @if (ViewBag.IsLoggedIn)
                {
                    <li class="nav-item"><a class="nav-link" href="/Notification"><i class="fas fa-bell"></i> الإشعارات (@ViewBag.UnreadNotifications)</a></li>
                }
                @if (ViewBag.IsAdmin)
                {
                    <li class="nav-item"><a class="nav-link active" href="/Admin/Dashboard"><i class="fas fa-tachometer-alt"></i> لوحة التحكم</a></li>
                }
                @if (!ViewBag.IsLoggedIn)
                {
                    <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="fas fa-sign-in-alt"></i> تسجيل الدخول</a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="/Account/Logout"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="mb-4">تعديل الفيديو التعريفي للدورة: @Model.Title</h2>
        <form method="post" asp-action="EditIntroVideo" asp-route-courseId="@Model.CourseId">
            <div class="mb-3">
                <label class="form-label">رابط الفيديو التعريفي (YouTube Embed)</label>
                <input type="text" name="IntroVideoUrl" class="form-control" value="@Model.IntroVideoUrl" placeholder="مثال: https://www.youtube.com/embed/رابط_الفيديو" />
                <small class="text-muted">أدخل رابط الفيديو المضمّن من YouTube (بدون https://www.youtube.com/watch?v=، فقط استخدم /embed/).</small>
            </div>
            <button type="submit" class="btn btn-primary">حفظ التغييرات</button>
            <a href="/Admin/Dashboard" class="btn btn-secondary ms-2">عودة إلى لوحة التحكم</a>
        </form>
    </div>

    <footer class="bg-dark text-white text-center py-4 mt-4">
        <div class="container">
            <p>© 2025 منصة عمر. جميع الحقوق محفوظة. <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">سياسة الخصوصية</a></p>
            <div class="mt-2">
                <a href="#" class="text-white mx-2"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white mx-2"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>
</html>