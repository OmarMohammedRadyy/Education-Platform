@model User

@{
    ViewData["Title"] = "إنشاء حساب جديد - منصة عمر";
}

<div class="register-section">
    <div class="register-container">
        <h2>إنشاء حساب جديد</h2>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }
        <form method="post" asp-action="Register">
            <div class="mb-4">
                <label asp-for="FullName" class="form-label">الاسم الكامل</label>
                <input asp-for="FullName" class="form-control" placeholder="أدخل اسمك الكامل" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                <input asp-for="Email" class="form-control" placeholder="أدخل بريدك الإلكتروني" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Phone" class="form-label">رقم الهاتف</label>
                <input asp-for="Phone" class="form-control" placeholder="أدخل رقم هاتفك" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="PasswordHash" class="form-label">كلمة المرور</label>
                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="أدخل كلمة المرور" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Role" class="form-label">الدور</label>
                <select asp-for="Role" class="form-control">
                    <option value="Student">طالب</option>
                    <option value="Teacher">مدرس</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">تسجيل</button>
            <a href="/Account/Login" class="btn btn-link d-block text-center mt-3">لديك حساب؟ تسجيل الدخول</a>
        </form>
    </div>
</div>

